<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#c8d6e5"
    android:orientation="vertical"
    android:weightSum="100"
    tools:context="app.sematech.training.MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:background="@color/colorToolbarMenuBackground"
                android:elevation="5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:padding="5dp"
                    android:weightSum="100">

                    <Button
                        android:id="@+id/toggle"
                        android:layout_width="0dp"
                        android:layout_height="36dp"
                        android:layout_weight="15"
                        android:background="@drawable/ic_baseline_menu" />


                    <EditText
                        android:id="@+id/search_bar"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_centerInParent="true"
                        android:layout_weight="70"
                        android:hint="Search Here"
                        android:inputType="none"
                        android:singleLine="true"
                        android:textColor="#fff"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <Button
                        android:id="@+id/search_btn_main"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_weight="15"
                        android:background="@drawable/ic_baseline_search" />

                </LinearLayout>

            </android.support.v7.widget.Toolbar>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="20"
                    android:weightSum="20">

                    <app.sematech.training.customView.MyButtonView
                        android:id="@+id/calculator_activity"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="10dp"
                        android:layout_marginRight="5dp"
                        android:layout_weight="10"
                        android:background="@drawable/button_theme"
                        android:text="@string/calculator" />

                    <Button
                        android:id="@+id/downloader_activity"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="10dp"
                        android:layout_marginLeft="5dp"
                        android:layout_weight="10"
                        android:background="@drawable/button_theme"
                        android:text="@string/url_downloader" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="20"
                    android:weightSum="20">

                    <Button
                        android:id="@+id/shared_preferences"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="10dp"
                        android:layout_marginRight="5dp"
                        android:layout_weight="10"
                        android:background="@drawable/button_theme"
                        android:text="Shared Preferences (Login)" />

                    <Button
                        android:id="@+id/database_activity"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="10dp"
                        android:layout_marginLeft="5dp"
                        android:layout_weight="10"
                        android:background="@drawable/button_theme"
                        android:text="DataBase" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="20"
                    android:weightSum="20">

                    <Button
                        android:id="@+id/map"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="10dp"
                        android:layout_marginRight="5dp"
                        android:layout_weight="10"
                        android:background="@drawable/button_theme"
                        android:text="@string/map" />

                    <Button
                        android:id="@+id/list_view"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="10dp"
                        android:layout_marginLeft="5dp"
                        android:layout_weight="10"
                        android:background="@drawable/button_theme"
                        android:text="List View" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="20"
                    android:weightSum="20">

                    <Button
                        android:id="@+id/web_view"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="10dp"
                        android:layout_marginRight="5dp"
                        android:layout_weight="10"
                        android:background="@drawable/button_theme"
                        android:text="Web View" />

                    <Button

                        android:id="@+id/search_movie"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="10dp"
                        android:layout_marginLeft="5dp"
                        android:layout_weight="10"
                        android:background="@drawable/button_theme"
                        android:text="Search Movie" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="20"
                    android:weightSum="20">

                    <Button
                        android:id="@+id/activity_weather"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginRight="5dp"
                        android:layout_weight="10"
                        android:background="@drawable/button_theme"
                        android:text="Weather" />

                    <Button
                        android:id="@+id/recycle_view_button"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="5dp"
                        android:layout_weight="10"
                        android:background="@drawable/button_theme"
                        android:text="Recycle View" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="200dp"
        android:layout_height="match_parent"
        android:layout_gravity="left"
        android:background="#c8d6e5">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <Button
                android:id="@+id/wifi_check"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Wifi" />

            <Button
                android:id="@+id/bluetooth_check"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Bluetooth" />

            <Button
                android:id="@+id/mobile_data_check"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Mobile Data Check" />
        </LinearLayout>


    </RelativeLayout>


</android.support.v4.widget.DrawerLayout>




