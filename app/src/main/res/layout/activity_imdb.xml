<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_imdb"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#c8d6e5"
    android:orientation="vertical"
    tools:context="app.sematech.training.IMDBActivity">
    <android.support.v7.widget.Toolbar
        android:layout_gravity="left|center"
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@color/colorToolbarMenuBackground"
        android:elevation="5dp">

        <LinearLayout
            android:padding="5dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="10">

            <EditText
                android:layout_weight="9"
                android:id="@+id/movieName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:hint=" Enter city" />

            <ImageButton
                android:layout_weight="1"
                android:layout_gravity="center_horizontal"
                android:id="@+id/search"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:background="#fff"
                android:padding="10dp"
                android:src="@drawable/ic_search" />
        </LinearLayout>
    </android.support.v7.widget.Toolbar>
    <!--<EditText-->
        <!--android:id="@+id/name"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:hint="Search a Movie" />-->

    <!--<Button-->
        <!--android:id="@+id/search"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:text="Search" />-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:padding="12dp">


        <ImageView
            android:id="@+id/image"
            android:layout_width="120dp"
            android:layout_height="200dp"
            android:layout_marginTop="10dp"
            android:clickable="true" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingLeft="10dp">


            <TextView
                android:textColor="@color/colorToolbarMenuBackground"
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:textColor="@color/colorToolbarMenuBackground"
                android:id="@+id/imdbRating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:textSize="12sp" />

            <TextView
                android:textColor="@color/colorToolbarMenuBackground"
                android:id="@+id/year"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:textSize="12sp" />

            <TextView
                android:textColor="@color/colorToolbarMenuBackground"
                android:id="@+id/genre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:textSize="12sp" />

            <TextView
                android:textColor="@color/colorToolbarMenuBackground"
                android:id="@+id/plot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:textSize="12sp" />

            <Button
                android:id="@+id/more_data"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginTop="5dp"
                android:text="More >>>"
                android:textSize="12sp" />


        </LinearLayout>

    </LinearLayout>


</LinearLayout>
