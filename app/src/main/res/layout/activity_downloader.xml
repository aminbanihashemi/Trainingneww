<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#c8d6e5"
    tools:context=".DownloaderActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@color/colorToolbarMenuBackground"
        android:elevation="5dp">
        <Button
            android:id="@+id/backBtn"
            android:text="Back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </android.support.v7.widget.Toolbar>

    <EditText
        android:padding="12dp"
        android:text="https://hw13.cdn.asset.aparat.com/aparat-video/f57fa00dfe38e4762050c648efdacce511706335-240p__14035.mp4"
        android:id="@+id/url"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:padding="12dp"
        android:id="@+id/download"
        android:text="Download"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"/>

    <ProgressBar
        android:layout_gravity="center_horizontal"
        android:padding="12dp"
        android:max="100"
        android:id="@+id/download_percent"
        android:layout_marginTop="30dp"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_gravity="center_horizontal"
        android:padding="12dp"
        android:id="@+id/percent"
        android:textSize="20sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_gravity="center_horizontal"
        android:padding="12dp"
        android:id="@+id/result_downloader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>